@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;
@using X.PagedList.Mvc.Core.Fluent;
@model X.PagedList.IPagedList<MyBikeApp.Models.Journey>

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    // ViewData["Title"] = "Index";
    ViewBag.Title = "Journeys";
   // var pagedList = (X.PagedList.IPagedList)ViewBag.Title;
}

<h2>List of Journeys</h2>


<p>
    <a asp-action="Create">Create New</a>
</p>

@using (Html.BeginForm("Index", "Journeys", FormMethod.Get))
{
    <p>
        Find by name: @Html.TextBox("searchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search" />
    </p>
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Departure", "Index", new { sortOrder = ViewBag.NameSortParm , currentFilter=ViewBag.CurrentFilter})
            </th>
            <th>
                @Html.ActionLink("Return", "Index", new { sortOrder = ViewBag.ReturnSortParm , currentFilter=ViewBag.CurrentFilter})
            </th>
            <th>
                @Html.ActionLink("Date", "Index", new { sortOrder = ViewBag.DateSortParm , currentFilter=ViewBag.CurrentFilter})
            </th>

            <th></th>
        </tr>
    </thead>

    <tbody>
    
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DepartureStationName</td>
                <td>@item.Departure</td>
                <td>@item.ReturnStationName</td>
                <td>@item.Return</td>
                <td>@item.DurationSec</td>
                <td>@item.CoveredDistanceM</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
             </tr>
        }
  

    </tbody>

        
</table>
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager( Model , page => Url.Action("Index", new { page }) )